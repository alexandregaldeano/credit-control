<odoo>
    <record model="ir.ui.view" id="account_partial_reconcile_form_view">
        <field name="name">account.partial.reconcile.form (in edi_account)</field>
        <field name="model">account.partial.reconcile</field>
        <field name="arch" type="xml">
            <form string="Reconcile part" create="false" edit="false">
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-retweet"
                            attrs="{'invisible': [('exchange_record_count', '=', 0)]}"
                            name="action_view_edi_records"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="exchange_record_count" />
                                </span>
                                <span class="o_stat_text">EDI</span>
                            </div>
                        </button>
                    </div>
                    <group name="main">
                        <group>
                            <field name="full_reconcile_id" readonly="1" />
                            <field name="amount" readonly="1" />
                            <field name="max_date" readonly="1" />
                        </group>
                        <group>
                            <field name="company_id" readonly="1" />
                            <field name="company_currency_id" readonly="1" />
                            <field
                                name="upflow_uuid"
                                readonly="1"
                                groups="base.group_no_one"
                            />
                        </group>
                    </group>
                    <group name="debit_credit">
                        <group>
                            <field name="debit_move_id" readonly="1" />
                            <field name="debit_currency_id" readonly="1" />
                        </group>
                        <group>
                            <field name="credit_move_id" readonly="1" />
                            <field name="credit_currency_id" readonly="1" />
                            <field name="credit_amount_currency" readonly="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>


</odoo>
